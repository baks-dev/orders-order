<div class="offcanvas-header">

    {# Сообщение об ощибке из контроллера #}
    {% if error is not null %}
        <div class="alert alert-warning p-3 m-0" role="alert">
            <div class="lh-1">
                <small class="text-danger fw-bold">{{ error }}</small>
            </div>
        </div>
    {% endif %}

    <button type="button" class="btn-close icon rounded-circle" style="width: 35px; height: 35px;"
            data-bs-dismiss="offcanvas"
            title="Close">

    </button>
</div>

{# @var material \BaksDev\Materials\Sign\Repository\GroupMaterialSignsByOrder\GroupMaterialSignsByOrderResult #}

{# @var product \BaksDev\Products\Sign\Repository\GroupProductSignsByOrder\GroupProductSignsByOrderResult #}

{# @var order \BaksDev\Orders\Order\Repository\OrderDetail\OrderDetailResult #}

{% if order %}

    {{ form_start(form, { attr: { class: 'offcanvas-body w-100 p-0' } }) }}

    <div class='px-3 mb-3'>

        <div class='d-flex gap-3 align-items-center'>

            <div class="badge" style='background-color: {{ status.color }};'>
                {{ order.orderStatus|trans({}, 'status.order') }}
            </div>

            <h5 class="offcanvas-title flex-grow-1 mb-0 copy pointer d-flex align-items-center gap-2"
                data-copy="{{ order.orderNumber }}">
                <svg xmlns="http://www.w3.org/2000/svg" x="0px" y="0px" width="14"
                     height="14" fill="text-primary" viewBox="0 0 115.77 122.88">
                    <path d="M89.62,13.96v7.73h12.19h0.01v0.02c3.85,0.01,7.34,1.57,9.86,4.1c2.5,2.51,4.06,5.98,4.07,9.82h0.02v0.02 v73.27v0.01h-0.02c-0.01,3.84-1.57,7.33-4.1,9.86c-2.51,2.5-5.98,4.06-9.82,4.07v0.02h-0.02h-61.7H40.1v-0.02 c-3.84-0.01-7.34-1.57-9.86-4.1c-2.5-2.51-4.06-5.98-4.07-9.82h-0.02v-0.02V92.51H13.96h-0.01v-0.02c-3.84-0.01-7.34-1.57-9.86-4.1 c-2.5-2.51-4.06-5.98-4.07-9.82H0v-0.02V13.96v-0.01h0.02c0.01-3.85,1.58-7.34,4.1-9.86c2.51-2.5,5.98-4.06,9.82-4.07V0h0.02h61.7 h0.01v0.02c3.85,0.01,7.34,1.57,9.86,4.1c2.5,2.51,4.06,5.98,4.07,9.82h0.02V13.96L89.62,13.96z M79.04,21.69v-7.73v-0.02h0.02 c0-0.91-0.39-1.75-1.01-2.37c-0.61-0.61-1.46-1-2.37-1v0.02h-0.01h-61.7h-0.02v-0.02c-0.91,0-1.75,0.39-2.37,1.01 c-0.61,0.61-1,1.46-1,2.37h0.02v0.01v64.59v0.02h-0.02c0,0.91,0.39,1.75,1.01,2.37c0.61,0.61,1.46,1,2.37,1v-0.02h0.01h12.19V35.65 v-0.01h0.02c0.01-3.85,1.58-7.34,4.1-9.86c2.51-2.5,5.98-4.06,9.82-4.07v-0.02h0.02H79.04L79.04,21.69z M105.18,108.92V35.65v-0.02 h0.02c0-0.91-0.39-1.75-1.01-2.37c-0.61-0.61-1.46-1-2.37-1v0.02h-0.01h-61.7h-0.02v-0.02c-0.91,0-1.75,0.39-2.37,1.01 c-0.61,0.61-1,1.46-1,2.37h0.02v0.01v73.27v0.02h-0.02c0,0.91,0.39,1.75,1.01,2.37c0.61,0.61,1.46,1,2.37,1v-0.02h0.01h61.7h0.02 v0.02c0.91,0,1.75-0.39,2.37-1.01c0.61-0.61,1-1.46,1-2.37h-0.02V108.92L105.18,108.92z"></path>
                </svg>

                <span>Заказ #{{ order.orderNumber }}</span>

            </h5>
        </div>

        <hr>

        <ul class="nav nav-pills d-flex gap-3 pb-4 sticky-top bg-body me-5" id="pills-tab" role="tablist">

            <li class="nav-item" role="presentation">
                <button class="btn nav-link fw-bolder rounded-3 border active position-relative"
                        id="order"
                        data-bs-toggle="pill"
                        data-bs-target="#pills-order"
                        aria-controls="pills-order"
                        type="button" role="tab"
                        aria-selected="true">
                    <span class="text-uppercase px-3">Заказ</span>
                </button>
            </li>

            {# УСЛУГИ #}
            {% if form.serv is defined %}

                <li class="nav-item" role="presentation">
                    <button class="btn nav-link fw-bolder rounded-3 border"
                            id="history"
                            data-bs-toggle="pill"
                            data-bs-target="#pills-services"
                            aria-controls="pills-services"
                            type="button"
                            role="tab"

                            aria-selected="false" tabindex="-1">

                        <span class="text-uppercase px-3">Услуги</span>
                    </button>
                </li>

            {% endif %}

            <li class="nav-item " role="presentation">
                <button class="btn nav-link fw-bolder rounded-3 border"
                        id="delivery" data-bs-toggle="pill"
                        data-bs-target="#pills-delivery"
                        aria-controls="pills-delivery"
                        type="button"
                        role="tab"
                        aria-selected="false" tabindex="-1">
                    <span class="text-uppercase px-3">Доставка</span>
                </button>
            </li>


            <li class="nav-item " role="presentation">
                <button class="btn nav-link fw-bolder rounded-3 border"
                        id="payment" data-bs-toggle="pill"
                        data-bs-target="#pills-payment"
                        aria-controls="pills-payment"
                        type="button"
                        role="tab"
                        aria-selected="false" tabindex="-1">
                    <span class="text-uppercase px-3">Оплата</span>
                </button>
            </li>

            <li class="nav-item" role="presentation">
                <button class="btn nav-link fw-bolder rounded-3 border"
                        id="history"
                        data-bs-toggle="pill"
                        data-bs-target="#pills-history"
                        aria-controls="pills-history"
                        type="button"
                        role="tab"

                        aria-selected="false" tabindex="-1"><span class="text-uppercase px-3">История</span>
                </button>
            </li>

            {# ДОКУМЕНТЫ #}

            {{ include(_self|replace({ "content.html.twig": "form/docs.html.twig" })) }}

        </ul>

        <div class="tab-content w-100 h-100" id="pills-tabContent">


            <div class="tab-pane fade active show" role="tabpanel"
                 id="pills-order"
                 tabindex="0">

                {% if order.orderUser is not null %}

                    {% set users = order.orderUser|filter(v => v.profile_value is not empty and v.profile_name is not empty) %}

                    {% if users %}

                        {# Клиент #}
                        <div class="d-flex align-items-center bg-light gap-3 p-3 rounded-3 my-3">

                            <div>
                                {# Обложка  #}
                                {% set image_path = '/assets/'~version~'/img/blank.svg' %}

                                {% if order.profile_avatar_ext is defined and order.profile_avatar_ext is not null %}
                                    {% set img_host =  order.profile_avatar_cdn == true  ? CDN_HOST : '' %}
                                    {% set img_dir = order.profile_avatar_name %}
                                    {% set img_file = (img_host is empty ? '/image.' : '/small.') ~ order.profile_avatar_ext %}
                                    {% set image_path = img_host ~ img_dir ~ img_file %}
                                {% endif %}

                                <span class="icon rounded-circle bg-contain lazy p-1 mb-2 entered loaded"
                                      style="width: 43px; height: 43px; background-image: url('{{ image_path }}');"
                                ></span>
                            </div>

                            {% set organization_field = constant('BaksDev\\Field\\Pack\\Organization\\Type\\OrganizationField::TYPE') %}
                            {% set contact_field = constant('BaksDev\\Field\\Pack\\Contact\\Type\\ContactField::TYPE') %}

                            <div class='d-flex flex-column small w-100'>
                                {% for user in users|filter(v =>
                                    v.profile_type == organization_field
                                    or v.profile_type == contact_field
                                ) %}

                                    <small class="small text-muted">{{ user.profile_name }}</small>
                                    <span class="h6">
                                        {{ user.profile_value|call_twig_func(user.profile_type~'_template') }}
                                    </span>

                                {% endfor %}
                            </div>

                            {% set phone_field = constant('BaksDev\\Field\\Pack\\Phone\\Type\\PhoneField::TYPE') %}
                            {% set email_field = constant('BaksDev\\Auth\\Email\\Type\\Email\\AccountEmail::TYPE') %}

                            <div class='d-flex flex-column small w-100'>
                                {% for user in users|filter(v =>
                                    v.profile_type == phone_field
                                    or v.profile_type == email_field
                                ) %}

                                    <small class="small text-muted">{{ user.profile_name }}</small>
                                    <span class="h6">
                                        {{ user.profile_value|call_twig_func(user.profile_type~'_template') }}
                                    </span>

                                {% endfor %}
                            </div>

                        </div>

                    {% endif %}
                {% endif %}



                {# is_granted('ROLE_ADMIN') == true or #}
                {% set allEditField = order.orderStatus == 'new' or order.orderStatus == 'phone' %}


                {% set partEditField = order.orderStatus == 'package' or order.orderStatus == 'extradition' %}

                {# Запрет на редактирвоание количества либо стоимости #}
                {% set notEdit =
                    order.orderStatus == 'canceled'
                    or order.orderStatus == 'return'
                    or order.orderStatus == 'completed'
                    or order.orderStatus == 'delivery'
                    or order.orderStatus == 'unpaid' %}


                <div class="d-flex align-items-center">
                    <h5 class="text-uppercase fw-bolder py-2 w-75">Продукция</h5>

                    {# СКИДКА ЗАКАЗА #}
                    <div class="fw-bold w-100 ">
                        <div class="ms-2 w-50">

                            <div class="input-group">

                                <span class="input-group-text {{ notEdit is true ? 'd-none' }}" id="basic-addon1">
                                    ± %
                                </span>

                                {{ form_widget(form.discount, {
                                    title: "Скидка к заказу",
                                    attr: {
                                        placeholder : 'Скидка к заказу',
                                        class: notEdit is true ? 'bg-light text-muted d-none' : 'form-control-sm',
                                        readonly:  notEdit is true ?: false
                                    },
                                }) }}

                            </div>

                        </div>
                    </div>

                    <div class="small text-nowrap">
                        <span class="me-3 pt-3"> Позиций: &nbsp;
                            <span class="text-primary">
								{{ form.product.count }} {{ 'num_of_products'|trans({'count': form.product.count }, 'messages') }}
							</span>
							</span>
                    </div>
                </div>

                <div class="d-flex flex-column gap-3 my-3">

                    {# @TODO #}
                    {# Запрет на изменение заказа (стоимости, количество и пр.)  #}
                    {#                    {% set notEdit = #}
                    {#                        order.orderStatus == 'package' or #}
                    {#                    order.orderStatus == 'extradition' or #}
                    {#                        order.orderStatus == 'delivery' or #}
                    {#                        order.orderStatus == 'completed' #}

                    {# ПРОДУКТ #}

                    <div class="border rounded-4 p-2" id="order-product-list"
                         data-prototype='{{ include(_self|replace({ "content.html.twig": "form/products/product.prototype.html.twig" })) }}'>
                        {{ include(_self|replace({ "content.html.twig": "form/products/products.html.twig" })) }}
                    </div>

                    {% if notEdit is not true %}

                        <a href="{{ path('orders-order:admin.order.add') }}"
                           class="btn btn-primary modal-link"
                           data-bs-toggle="modal"
                           data-bs-target="#modal"
                           title="Добавить в заказ">

                            <span class="svg-icon svg-icon-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                     fill="none">
                                    <rect opacity="0.5" x="11" y="18" width="12" height="2" rx="1"
                                          transform="rotate(-90 11 18)" fill="currentColor"></rect>
                                    <rect x="6"
                                          y="11"
                                          width="12"
                                          height="2"
                                          rx="1"
                                          fill="currentColor"
                                    ></rect>
                                </svg>
                            </span>

                            Добавить в заказ

                        </a>

                    {% endif %}

                </div>


                {{ form_widget(form.comment, {  attr: { placeholder : 'Комментарий к заказу'} }) }}

            </div>

            {# ОПЛАТА  #}

            <div class="tab-pane fade " id="pills-payment" role="tabpanel" tabindex="0">
                {{ include(_self|replace({ "content.html.twig": "form/payment.html.twig" })) }}
            </div>

            {# ОПЛАТА И ДОСТАВКА #}

            <div class="tab-pane fade " id="pills-delivery" role="tabpanel" tabindex="0">

                {{ include(_self|replace({ "content.html.twig": "form/delivery.html.twig" })) }}

                {% set address = order.deliveryGeocodeAddress %}

                {% if address is null %}
                    {% for delivery_field in form.usr.delivery.field %}
                        {% if delivery_field.value.vars.label == 'Адрес доставки' %}
                            {% set address = delivery_field.value.vars.data %}
                        {% endif %}
                    {% endfor %}
                {% endif %}

            </div>


            {# ИСТОРИЯ #}

            <div class="tab-pane fade" id="pills-history" role="tabpanel" tabindex="0">

                <div class="border rounded-4 p-2">
                    <table class="table table-striped table-borderless mb-0">

                        <thead>
                        <tr class="small">
                            <th>Статус</th>
                            <th>Дата</th>
                            <th>Время</th>
                            <th>Пользователь</th>
                        </tr>
                        </thead>
                        <tbody>

                        {% for hist in history %}

                            <tr>
                                <td>
                                    <span class="badge"
                                          style='background-color: {{ statuses.from(hist.status).getColor() }};'>
                                        {{ hist.status|trans({}, 'status.order') }}
                                    </span>
                                </td>
                                <td>{{ hist.mod_date|date('d.m.Y') }}</td>
                                <td>{{ hist.mod_date|date('H:i:s') }}</td>
                                <td>

                                    {% if loop.first %}
                                        {% for user in users|slice(0, 1) %}
                                            {{ user.profile_name }}
                                        {% endfor %}
                                    {% else %}
                                        {{ hist.profile_username }}
                                    {% endif %}

                                </td>
                            </tr>
                        {% endfor %}

                        </tbody>
                    </table>

                </div>

            </div>

            {# УСЛУГИ #}

            {% if form.serv is defined %}

                {% set service_prototype = 'service_collection_prototype' %}

                <div class="tab-pane fade" id="pills-services" role="tabpanel" tabindex="0">

                    <h5 class="text-uppercase fw-bolder py-2">Услуги для заказа</h5>

                    {# Коллекция элементов #}
                    <div class="border rounded-4 p-2 mb-2">
                        {{ include(_self|replace({ "content.html.twig": "form/services/service.html.twig" })) }}
                    </div>

                    <div id="service_collcetion_controls">

                        {# Кнопка добавления элемента в коллекцию #}
                        <a id="add_item_{{ form.serv.vars.id }}"
                           href="{{ path('services:admin.order.service.edit') }}"
                           class="btn btn-primary w-100 modal-link"
                           title="Добавить в заказ"
                           data-bs-toggle="modal"
                           data-bs-target="#modal"
                           data-form="{{ form.serv.vars.id }}"
                           data-prototype="{{ service_prototype }}"
                           data-index="{{ form.serv.count }}">

                            <span class="svg-icon svg-icon-2">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24"
                                     fill="none">
                                    <rect opacity="0.5" x="11" y="18" width="12" height="2" rx="1"
                                          transform="rotate(-90 11 18)" fill="currentColor"></rect>
                                    <rect x="6" y="11" width="12" height="2" rx="1" fill="currentColor"></rect>
                                </svg>
                            </span>

                            Добавить в заказ

                        </a>

                        {# Прототип для элемента коллекции #}
                        <div id="{{ service_prototype }}"
                             data-prototype="{{ include('@orders-order/admin/detail/pc/form/services/service.prototype.html.twig')|e('html_attr') }}">
                        </div>
                    </div>


                </div>

            {% endif %}

        </div>

    </div>

    {# Калькуляция стоимости продуктов в заказе #}
    {% set total_summ = 0 %}
    {% set total_counter = 0 %}
    {% set total_summ_currency = null %}

    {% for product in form.product %}

        {# @var card \BaksDev\Orders\Order\Repository\ProductUserBasket\ProductUserBasketResult #}
        {% set card = product.vars.data.card %}

        {% if card %}
            {% set summ = (product.price.vars.data.total * (product.price.vars.data.price.value * 100)) %}
            {% set total_counter = total_counter + product.price.vars.data.total %}
            {% set total_summ = total_summ + summ %}
            {% set total_summ_currency = card.productCurrency %}
        {% endif %}

    {% endfor %}


    <div class="w-100 d-flex justify-content-between align-items-center bg-light p-3 gap-3">

        <div class="w-100">

            {# Сумма за продукцию #}
            <span class="small">{{ total_counter }} товаров на сумму: &nbsp;
                <span id='total_product_sum'>{{ money(total_summ, total_summ_currency) ?: 0 }}</span>
            </span>

            <br>

            {# УСЛУГИ #}
            {% if form.serv is defined %}

                {# Калькуляция стоимости услуг в заказе #}
                {% set total_summ_service = 0 %}

                {% for serv in form.serv %}
                    {% set total_summ_service = total_summ_service + (serv.money.vars.data * 100) %}
                {% endfor %}

                {# Сумма за услуги #}
                <span class="small">Услуг на сумму: &nbsp;
                    <span id='service_sum'
                          data-summ="{{ total_summ_service/100 }}">{{ money(total_summ_service) ?: 0 }}</span>
                </span>

                {# Суммируем с суммой за продукцию #}
                {% set total_summ = total_summ + total_summ_service %}

            {% endif %}

            <div class="d-flex align-items-stretch">
                <span class="small me-3 pt-1">Итого:</span>
                <span id='total_all_sum'
                      class="fw-bolder mb-0 h3">{{ money(total_summ, total_summ_currency) }}</span>
            </div>
        </div>

    </div>


    <div class="w-100 d-flex justify-content-between align-items-center sticky-bottom bottom-0 bg-light p-3 gap-3">

        <div>
            {#            {% if order.orderStatus != 'completed' %} #}
            {#            {% endif %} #}
            {{ form_widget(form.order, { label: '
                    <span class="text-nowrap">'~ 'Сохранить изменения'|trans({}, 'core.btn') ~'</span>
                    <span class="spinner-border spinner-border-sm vertical-middle d-none"></span>
		        ', attr: { class: 'btn-danger', title : "Сохранить изменения" }
            }) }}
        </div>


        <div class="w-50 d-flex gap-3 align-items-end justify-content-end">

            <button type="button"
                    class="btn btn-light border text-secondary"
                    data-bs-dismiss="offcanvas"
                    title="Close">
                <span class="text-nowrap">Закрыть без изменений</span>
            </button>

        </div>
    </div>

    {{ form_end(form) }}

{% endif %}
