                        __product_article__
                    </div>
            </div>

        </div>

    </td>

    <td class="vertical-middle text-center">

        <div class="d-flex justify-content-center align-items-center text-center">

            <button type="button" class="btn btn-sm minus"
                    title="Уменьшить количество"
                    data-id="{{ product_prototype.price.price.vars.id }}"
                    data-step="100"
            >
                <span class="h4 text-muted opacity-50">-</span>
            </button>

            {{ price_price_widget|raw }}

            <button type="button" class="btn btn-sm plus"
                    title="Увеличить количество"
                    data-id="{{ product_prototype.price.price.vars.id  }}"
                    data-step="100"
            >
                <span class="h5 text-muted opacity-50">+</span>
            </button>

        </div>

    </td>


    <td class="vertical-middle text-center">

        <div class="d-flex justify-content-center align-items-center text-center">

            <button type="button" class="btn btn-sm minus"
                    title="Уменьшить количество"
                    data-id="{{ product_prototype.price.total.vars.id  }}"
            >
                <span class="h4 text-muted opacity-50">-</span>
            </button>

            {{ price_total_widget|raw }}

            <button type="button" class="btn btn-sm plus"
                    title="Увеличить количество"
                    data-id="{{ product_prototype.price.total.vars.id }}"
            >
                <span class="h5 text-muted opacity-50">+</span>
            </button>

        </div>

    </td>

    <td class="vertical-middle">

            <strong id="summ_{{ product_prototype.price.total.vars.id }}"
                    data-price="__product_price__"
                    data-discount="__product_discount__"
                    data-currency="__product_currency__"
            >
                __product_price_formatted__

            </strong>


    </td>


    {# УДАЛИТЬ #}

    <td class="vertical-middle text-end">

        <li class="nav nav-item flex-grow-1 text-end" role="presentation">


            <div class="dropdown">

                <button class="btn btn-link dropdown-toggle text-muted d-flex align-items-center"
                        type="button" data-bs-toggle="dropdown"
                        aria-expanded="false">
                    <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" fill="currentColor"
