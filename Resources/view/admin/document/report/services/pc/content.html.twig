{% trans_default_domain('orders-order.admin') %}

<div class="modal-dialog modal-dialog-centered" style="max-width: 600px;">
    {{ form_start(form) }}
    <div class="modal-content p-3 border-bottom border-5 border-primary">
        <div class="modal-header align-items-center">

            <h5 class="modal-title">
                {# Заголовок модального окна #}
                {{ 'Скачать отчет об услугах в заказах'|trans }}:
            </h5>

            <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" title="Close">
                <span class="svg-icon svg-icon-2x"></span>
            </div>
        </div>

        <div class="modal-body d-flex justify-content-between" id="modal-body">

            <div class="w-50 d-flex gap-3 align-items-center text-nowrap">
                {{ form_label(form.from, 'Дата начала', { label_attr: { class: 'mb-0'} }) }}
                {# {{ form_row(form.from, { label: false, attr: { value : "now"|date("d.m.Y") }  }) }} #}

                <div class="input-group">
                            <span class="input-group-text">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="16" height="16"
                                     fill="currentColor"
                                     class="bi bi-calendar3"
                                     viewBox="0 0 16 16">
                                    <path d="M14 0H2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM1 3.857C1 3.384 1.448 3 2 3h12c.552 0 1 .384 1 .857v10.286c0 .473-.448.857-1 .857H2c-.552 0-1-.384-1-.857V3.857z"></path>
                                    <path d="M6.5 7a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"></path>
                                </svg>
                            </span>
                    {{ form_widget(form.from, { attr: { style: 'max-width: 110px;' } }) }}
                </div>

            </div>

            <div class="w-50 d-flex gap-3 align-items-center text-nowrap">

                <div>{{ form_label(form.from, 'Дата окончания', { label_attr: { class: 'mb-0'} } ) }}</div>

                <div class="input-group">
                            <span class="input-group-text">
                                <svg xmlns="http://www.w3.org/2000/svg"
                                     width="16" height="16"
                                     fill="currentColor"
                                     class="bi bi-calendar3"
                                     viewBox="0 0 16 16">
                                    <path d="M14 0H2a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2zM1 3.857C1 3.384 1.448 3 2 3h12c.552 0 1 .384 1 .857v10.286c0 .473-.448.857-1 .857H2c-.552 0-1-.384-1-.857V3.857z"></path>
                                    <path d="M6.5 7a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm-9 3a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2zm3 0a1 1 0 1 0 0-2 1 1 0 0 0 0 2z"></path>
                                </svg>
                            </span>
                    {{ form_widget(form.to, { attr: { style: 'max-width: 110px;' } }) }}
                </div>

            </div>

        </div>


        <div class="modal-footer">

            {% if is_granted('ROLE_ORDERS_REPORT_ORDERS_ALL') or is_granted('ROLE_ADMIN') %}
                <div class="flex-grow-1">
                    <div class="d-flex radio-buttons" data-buttons="true">
                        <label class="btn p-2 border-dotted rounded-3 active">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                <span class="h4">
                                    <div class="form-check px-3 d-flex align-items-center">
                                        {{ form_widget(form.all, { label: false }) }}
                                        <span class="h6 mb-0 mt-1">
                                            По всем регионам
                                        </span>
                                    </div>
                                </span>
                                </div>
                            </div>
                        </label>
                    </div>
                </div>
            {% endif %}



            <div class="d-flex gap-3">
                {# Отмена #}

                <button type="button" class="btn btn-light" data-bs-dismiss="modal">
                    {{ 'btn.cancel'|trans({}, 'core.btn') }}
                </button>

                {# Сохранить #}
                {{ form_widget(form.services_report, { label: '
				<span>'~ 'btn.save'|trans({}, 'core.btn') ~'</span>
			'}) }}
            </div>
        </div>


    </div>
    {{ form_end(form) }}
</div>
