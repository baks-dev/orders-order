    {# ТОВАРЫ #}
    <div class="modal fade" id="exampleModalToggle" style="--bs-modal-width: 700px;" aria-hidden="true" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content p-4 border-bottom border-5 border-primary">

                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalToggleLabel">Продукция</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" title="Close"></button>
                </div>

                <div class="modal-body d-flex flex-column gap-1">
                    <select class="form-select rounded-4 py-2 " title="Продукция" required="" data-select="select2">
                        <option value="">Выберите продукцию из списка...</option>
                        <option value="0" selected>Arivo Winmaster ARW2 155/70 R13 75T</option>
                        <option value="1">Triangle Sports TH201 195/45 R16 84W</option>
                    </select>

                    <select class="form-select rounded-4 py-2" title="Продукция" required="" data-select="select2">
                        <option value="">Выберите продукцию из списка...</option>
                        <option value="0">Arivo Winmaster ARW2 155/70 R13 75T</option>
                        <option value="1" selected>Triangle Sports TH201 195/45 R16 84W</option>
                    </select>
                </div>

                <div class="modal-footer justify-content-between">
                    <div class="flex-grow-1">
                        <button type="button" class="btn btn-outline-primary" data-bs-target="#exampleModalToggle"
                                data-bs-toggle="modal">
                            + Добавить продукцию
                        </button>
                    </div>

                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Отмена</button>
