                        </svg>
                    </div>

                </button>

                <ul class="dropdown-menu">
                    <li>
                        <a href="{{ path('orders-order:admin.document.report.orders') }}"
                           class="dropdown-item"
                           data-bs-toggle="modal"
                           data-bs-target="#modal"
                        >
                            Отчет о заказах
                        </a>
                    </li>

                    <li>
                        <a href="{{ path('orders-order:admin.document.report.products') }}"
                           class="dropdown-item"
                           data-bs-toggle="modal"
                           data-bs-target="#modal"
                        >
                            Отчет о продуктах
                        </a>
                    </li>
                </ul>
            </div>


        </div>

        <div class="border border-light rounded-4 p-3">

            <div class="d-flex justify-content-between">
                {# Форма поиска по разделу #}
                {% include Template('/_includes/'~baks_settings.device~'/search.html.twig') %}

                <div class="col-6">
                    {{ form_start(filter) }}
                    <div class="w-100 d-flex gap-3 justify-content-end mb-2" style="height: 40px;">

                        <div class="d-flex justify-content-around radio-buttons clearfix" data-buttons="true">
                            <label class="btn p-1 border-dotted rounded-3 w-100 ">
                                <div class="d-flex">
                                    {{ form_widget(filter.all, { label: false }) }}
                                    <div class="form-check ps-0"> Все </div>
                                </div>
                            </label>
                        </div>


                        <div class="w-50">
                            {{ form_row(filter.delivery, { placeholder : 'Любой способ доставки ...', attr : { 'data-select' : 'select2' } }) }}
                        </div>

                    </div>
                    {{ form_end(filter) }}
                </div>
            </div>

            {% if filter.delivery is defined and filter.delivery.vars.data %}
                <div class="d-flex gap-3 m-2">
                    <div><small class="text-muted">Способ доставки:</small>&nbsp;
                        <strong>{{ filter.delivery.vars.data.attr }}</strong>
                    </div>
                </div>
            {% endif %}

            <div class="d-flex justify-content-between gap-2 cards-box p-2 ">

                {% set status_array = status|filter(v => v.getValue() != 'canceled' and v.getValue() != 'decommission') %}
                {% set width_col = (1100 / (status_array|length))|round %}

                {% for stats in status_array %}

                    {% set color = stats.color() %}
                    {# {% set orders = query.data|filter(v => v.order_status == stats.getOrderStatusValue()) %} #}
                    {% set counter = query[stats.getValue()]|length %}

                    <div class="w-100 d-flex flex-column gap-2" style="min-width: {{ width_col }}px;">

                        <div class="d-flex flex-column gap-2 draggable-zone h-100 justify-content-start min-vh-100"
                             style="overflow-y: visible;"
                             data-status="{{ stats.getValue() }}"
                             data-level="{{ stats.getValue() == 'new' or
                             stats.getValue() == 'delivery'  or
                             stats.getValue() == 'extradition'  or
                             stats.getValue() == 'completed'
                             ? 'restricted' }}"
                        >
                            {% set href = null %}

                            {% if stats.getValue() == 'package' and (is_granted('ROLE_PRODUCT_STOCK_PACKAGE') or is_granted('ROLE_ADMIN')) %}
                                {% set href = 'products-stocks:admin.package.index' %}
                            {% elseif stats.getValue() == 'extradition' and (is_granted('ROLE_PRODUCT_STOCK_PICKUP') or is_granted('ROLE_ADMIN')) %}
                                {% set href = 'products-stocks:admin.pickup.index' %}
                            {% endif %}

                            {% if href %}
                                <a href="{{ path(href) }}" class="w-100 badge p-2 sticky-top z-index-5"
                                   style="top: 5rem; background-color: {{ color }};">
                                    {{ stats.getValue()|trans({}, 'status.order') }}
                                </a>
                            {% else %}

                                <div class="w-100 badge p-2 sticky-top z-index-5"
                                     style="top: 5rem; background-color: {{ color }};">
                                    {{ stats.getValue()|trans({}, 'status.order') }}
                                </div>

                            {% endif %}



                            {# <a href="#exampleModalToggle" class="btn btn-light w-100" data-bs-toggle="modal" role="button"
								title="Быстрая сделка">+ Быстрая сделка</a> #}


                            <div class="text-center"><small>
                                    {{ counter }}{{ 'num_of_orders'|trans({'count': counter}, 'messages') }}</small>
                            </div>


                            {% for order in query[stats.getValue()] %}

                                {# КАРТОЧКА ЗАКАЗА  #}
                                {{ include(_self|replace({ "content.html.twig": "order.html.twig" })) }}

                                {# ДАТАЛИ ЗАКАЗА #}
                                {# {{ include(_self|replace({ "content.html.twig": "_info.order.html.twig" })) }} #}


                            {% endfor %}


                        </div>

                    </div>


                {% endfor %}


                <!--end::Col-->
            </div>

        </div>

    </section>

    {#  ОТМЕНА ЗАКАЗОВ  #}


    {% set color = '#DC3545' %}

    <div class="draggable-zone child-hidden position-fixed bottom-0 start-0 p-5" style="z-index: 1024;"
         data-status="canceled">

        {# <div class="d-flex flex-column gap-2 h-100 justify-content-start draggable-zone child-hidden"
			 data-status="cancel"
		> #}
        {# <div class="w-100 badge text-bg-danger p-2 sticky-top" style="top: 1rem;">Отмена</div> #}


        <div class="icon rounded-circle mb-2 bg-danger shadow" style="width: 75px; height: 75px;">
            <svg xmlns="http://www.w3.org/2000/svg" width="30" height="40" fill="white" class="bi bi-trash"
                 viewBox="0 0 16 16">
                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
