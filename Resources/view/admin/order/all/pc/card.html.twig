{# @var item \BaksDev\Orders\Order\Repository\AllOrders\AllOrdersResult #}

<tr class="vertical-middle">


    <td class="text-nowrap">
        {# Пользовательское меню #}
        {{ include(_self|replace({ "card.html.twig": "_usecase.html.twig" })) }}
    </td>

    <td class="text-center">
        <span
                role="tooltip"
                data-bs-toggle="tooltip"
                data-bs-placement="bottom"
                data-bs-delay='{"show":600,"hide":100}'
                title='QR заказа'
        >
                <a
                        href="{{ path('orders-order:admin.order.qrcode', { id : item.orderId }) }}"
                        class="btn-link btn p-0 modal-link disabled icon"
                        data-bs-toggle="modal"
                        data-bs-target="#modal"
                        style="width: 55px; height: 55px;"
                >
                    <svg
                            xmlns="http://www.w3.org/2000/svg" width="45" height="45" fill="currentColor"
                            class="bi bi-qr-code" viewBox="0 0 16 16"><path d="M2 2h2v2H2V2Z"></path><path
                                d="M6 0v6H0V0h6ZM5 1H1v4h4V1ZM4 12H2v2h2v-2Z"></path><path
                                d="M6 10v6H0v-6h6Zm-5 1v4h4v-4H1Zm11-9h2v2h-2V2Z"></path><path
                                d="M10 0v6h6V0h-6Zm5 1v4h-4V1h4ZM8 1V0h1v2H8v2H7V1h1Zm0 5V4h1v2H8ZM6 8V7h1V6h1v2h1V7h5v1h-4v1H7V8H6Zm0 0v1H2V8H1v1H0V7h3v1h3Zm10 1h-1V7h1v2Zm-1 0h-1v2h2v-1h-1V9Zm-4 0h2v1h-1v1h-1V9Zm2 3v-1h-1v1h-1v1H9v1h3v-2h1Zm0 0h3v1h-2v1h-1v-2Zm-4-1v1h1v-2H7v1h2Z"></path><path
                                d="M7 12h1v3h4v1H7v-4Zm9 2v2h-3v-1h2v-1h1Z"></path>
                    </svg>
                </a>
            </span>
    </td>

    <td class="w-100">

        <button data-href='{{ path('orders-order:admin.detail', { id: item.orderId }) }}'
                data-id='{{ item.orderId }}'
                class="btn btn-sm btn-link fw-bolder mb-1 text-decoration-none product-name offcanvas-link"
        >
            {{ item.orderNumber }}
            <span class="badge bg-light text-dark fw-bolder p1 text-start ms-3">
                {{ item.orderProfile }}
            </span>
        </button>


        &nbsp;
        <div class="d-flex gap-3">

            {# {% set users = item.order_user|json_decode %}

            {% for user in users %}
                <div class='{{ loop.first ? "fw-bolder" }}'>
                    {{ user.profile_value|call_twig_func(user.profile_type~'_template') }}
                </div>
            {% endfor %} #}

            {% if item.clientName %}
                <div class='mb-1 text-truncate pointer'
                     style="max-width: calc(100%);"
                     role="tooltip"
                     data-bs-toggle="tooltip"
                     data-bs-placement="bottom"
                     data-bs-delay='{"show":200,"hide":100}'
                     title='{{ item.clientName.profile_value }}'
                >
                    {{ item.clientName.profile_value|call_twig_func(item.clientName.profile_type~'_template') }}
                </div>
            {% endif %}

            {% if item.clientPhone %}
                <div class='mb-1 text-truncate pointer {{ loop.first ? "fw-bolder" }}'
                     style="max-width: calc(100%);"
                     role="tooltip"
                     data-bs-toggle="tooltip"
                     data-bs-placement="bottom"
                     data-bs-delay='{"show":200,"hide":100}'
                     title='{{ item.clientPhone.profile_value }}'
                >
                    {{ item.clientPhone.profile_value|call_twig_func(item.clientPhone.profile_type~'_template') }}
                </div>
            {% endif %}


        </div>

        {# Комментарий  #}
        {% if item.orderComment %}
            <div class="text-danger fw-bolder">
                <svg width="18" height="18" viewBox="0 0 24 24" fill="none"
                     xmlns="http://www.w3.org/2000/svg">
                    <path opacity="0.3"
                          d="M20 3H4C2.89543 3 2 3.89543 2 5V16C2 17.1046 2.89543 18 4 18H4.5C5.05228 18 5.5 18.4477 5.5 19V21.5052C5.5 22.1441 6.21212 22.5253 6.74376 22.1708L11.4885 19.0077C12.4741 18.3506 13.6321 18 14.8167 18H20C21.1046 18 22 17.1046 22 16V5C22 3.89543 21.1046 3 20 3Z"
                          fill="currentColor"></path>
                    <rect x="6" y="12" width="7" height="2" rx="1" fill="currentColor"></rect>
                    <rect x="6" y="7" width="12" height="2" rx="1" fill="currentColor"></rect>
                </svg>
                &nbsp; {{ item.orderComment }}
            </div>
        {% endif %}
    </td>

    <td class="text-nowrap ">
        {{ item.stockProfileUsername }}
    </td>
    <td class="text-center">
        {{ order_status(item.orderStatus) }}
    </td>

    <td class="text-center text-nowrap">
        {{ item.orderCreated|date('d.m.Y H:i') }}
    </td>
    <td class="text-nowrap">
        {{ item.dateModify|date('d.m.Y H:i') }}
    </td>
</tr>


