<hr class="m-0">

<main>

    {% set isProducts = baks_basket.counter > 0 ? true : false %}

    {% set i = 0 %}

    <section class="container py-4">

        <div class="d-flex justify-content-between align-items-center">
            <h2 class="fs-14 text-uppercase fw-bold mb-0">
                корзина</h2>
        </div>

        {{ include(_self|replace({ "content.html.twig" : "includes/breadcrumb.html.twig" })) }}

        {% if form %}

            {{ form_start(form) }}

            {{ include(_self|replace({ "content.html.twig" : "includes/basket_accordion.html.twig" })) }}

            {{ form_end(form) }}

        {% else %}

            {# ПУСТАЯ КОРЗИНА #}
            <div class='d-flex justify-content-between align-items-center'>
                <div>
                    <h3>Ваша корзина пуста.</h3>
                    Начните с главной страницы или воспользуйтесь поиском.
                </div>

                <a href='{{ path('core:public.homepage') }}' class="btn btn-primary fw-medium rounded-5 py-2 mb-3">
                    <span class="h6 text-uppercase px-3 basket-text">Продолжить покупки</span>
                    <span class="spinner-border spinner-border-sm vertical-middle d-none"></span>
                </a>
            </div>

        {% endif %}

    </section>

    <div class="bg-secondary">


        {{ render_products_viewed() }}


    </div>

</main>
