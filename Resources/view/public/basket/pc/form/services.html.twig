{# Выбор услуг #}

<div class="services">

    <div class="d-flex align-items-center gap-3 mb-4">

        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="#a7d3f7" class="bi bi-gear-fill"
             viewBox="0 0 16 16">
            <path d="M9.405 1.05c-.413-1.4-2.397-1.4-2.81 0l-.1.34a1.464 1.464 0 0 1-2.105.872l-.31-.17c-1.283-.698-2.686.705-1.987 1.987l.169.311c.446.82.023 1.841-.872 2.105l-.34.1c-1.4.413-1.4 2.397 0 2.81l.34.1a1.464 1.464 0 0 1 .872 2.105l-.17.31c-.698 1.283.705 2.686 1.987 1.987l.311-.169a1.464 1.464 0 0 1 2.105.872l.1.34c.413 1.4 2.397 1.4 2.81 0l.1-.34a1.464 1.464 0 0 1 2.105-.872l.31.17c1.283.698 2.686-.705 1.987-1.987l-.169-.311a1.464 1.464 0 0 1 .872-2.105l.34-.1c1.4-.413 1.4-2.397 0-2.81l-.34-.1a1.464 1.464 0 0 1-.872-2.105l.17-.31c.698-1.283-.705-2.686-1.987-1.987l-.311.169a1.464 1.464 0 0 1-2.105-.872zM8 10.93a2.929 2.929 0 1 1 0-5.86 2.929 2.929 0 0 1 0 5.858z"/>
        </svg>

        <h3 class="fs-6 text-uppercase mb-0">Выбрать услуги (опционально)</h3>
    </div>

    {% for key, form in form.serv %}

        <div class="px-4">
            <div class="service-item p-2 d-flex border-dotted rounded-3 align-items-center">

                <div class="form-control-lg p-0 me-2 ms-4 d-flex align-items-center">

                    {{ form_widget(form.selected, {
                        label: '<span>
                                <span class="" style="font-size: 1rem; font-weight: 500;">' ~ form.vars.value.name ~ '</span>&nbsp;
                                       <span class="fs-14 fw-normal">(от ' ~ money(form.vars.value.price.price, 'rur') ~ ')</span>
                                    </span>',
                        attr: {
                            class: 'service_select',
                            'data-index': key
                        },
                        label_html: true
                    }) }}

                </div>


                <div id="order_form_service_{{ key }}"
                     class="item-service align-middle d-flex align-items-center d-none gap-1">

                    {{ form_row(form.serv) }}

                    {{ form_row(form.name, {attr: {class: 'service-name'}} ) }}

                    {{ form_row(form.money) }}

                    {{ form_widget(form.date, {attr: {style:'width:auto;', placeholder: 'Выберите дату ...' } }) }}

                    {{ form_row(form.period, { attr: {class: 'service-period'}, placeholder: 'Выберите период ...'} ) }}


                </div>

            </div>
        </div>

    {% endfor %}

</div>